<%= form_for @product do |form| %>
  <div>
    <%= form.label :product_name %><br>
    <%= form.text_field :product_name%>
  <% @product.errors.full_messages_for(:product_name).each do |message| %>
    <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :quantity %><br>
    <%= form.text_field :quantity %>

    <% @product.errors.full_messages_for(:quantity).each do |message| %>
      <div><%= message %></div>
      <% end %>
  </div>


   <div>
    <%= form.label :price %><br>
    <%= form.text_field :price%>
    <% @product.errors.full_messages_for(:price).each do |message| %>
      <div><%= message %></div>
      <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
